<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ERP.Mobile.Views.ProductosPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:ERP.Mobile.ViewModels"
    x:DataType="viewmodels:ProductosViewModel"
    Title="Productos">

    <Grid RowDefinitions="Auto,*">
        
        <!-- Header -->
        <StackLayout Grid.Row="0" Padding="20">
            <Label Text="GestiÃ³n de Productos" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />
            
            <Button Text="Cargar Productos" 
                    Command="{Binding CargarProductosCommand}"
                    BackgroundColor="DodgerBlue"
                    TextColor="White" />
        </StackLayout>

        <!-- Lista de productos -->
        <CollectionView Grid.Row="1" 
                        ItemsSource="{Binding Productos}"
                        Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*,Auto" Padding="15" RowSpacing="5">
                        <StackLayout Grid.Column="0">
                            <Label Text="{Binding Nombre}" 
                                   FontAttributes="Bold" 
                                   FontSize="16" />
                            <Label Text="{Binding Descripcion}" 
                                   FontSize="14" 
                                   TextColor="Gray" />
                            <Label Text="{Binding Precio, StringFormat='${0:F2}'}" 
                                   FontSize="16" 
                                   TextColor="Green" />
                        </StackLayout>
                        
                        <Label Grid.Column="1" 
                               Text="{Binding Stock}" 
                               FontSize="18"
                               VerticalOptions="Center" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>

</ContentPage>
